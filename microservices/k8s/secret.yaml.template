apiVersion: v1
kind: Secret
metadata:
  name: airline-secrets
  namespace: airline
type: Opaque
stringData:
  DB_USER: "airline"
  DB_PASSWORD: "airline123"
  # Set this value before applying!
  # Option 1: Replace with your actual key
  # Option 2: Use: kubectl create secret generic airline-secrets --from-literal=OPENROUTER_API_KEY=$OPENROUTER_API_KEY ...
  OPENROUTER_API_KEY: "YOUR_OPENROUTER_API_KEY_HERE"
